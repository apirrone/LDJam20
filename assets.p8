end

function background()
	rectfill(0,0,127,32,12)
	line(0,33,127,33,3)
	rectfill(0,34,127,127,11)
end

function animation()
	if t==0 then
		spr(0,p.x,p.y,2,2)
	end
	if t==1 then
		spr(2,p.x,p.y,2,2)
	end
	if t==2 then
		spr(4,p.x,p.y,2,2)
	end
	if t==3 then
		spr(6,p.x,p.y,2,2)
	end
end

function _draw()
	background()
	animation()
end

function _update()
	if btn(0) then
		p.x-=2
	end	
	if btn(1) then
		p.x+=2
	end
	if btn(2) then
		p.y-=2
	end
	if btn(3) then
		p.y+=2
	end
	t+=1
	if t>3 then
		t=0
	end
end
